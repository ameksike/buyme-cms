{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "default": "DEB-01"
    },
    "value": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "USD",
        "EUR",
        "MLC",
        "CUP"
      ],
      "default": "USD"
    },
    "date": {
      "type": "datetime"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Debit",
        "Credit"
      ],
      "default": "Debit",
      "required": true
    },
    "note": {
      "type": "text"
    },
    "User": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "rate": {
      "type": "decimal",
      "default": 1,
      "min": 1
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Other",
        "Debt",
        "Pay",
        "Food",
        "Ticket",
        "Airport",
        "Rapping",
        "Transport",
        "Taxi",
        "Uber"
      ],
      "default": "Other"
    },
    "balance": {
      "type": "customField",
      "options": {
        "fetch": {
          "url": "/api/transactions/:id/balance",
          "map": "{\n    \"Balance\":\"balance\",\n    \"Credit\":\"credit\",\n    \"Debit\":\"debit\"\n}",
          "body": "",
          "headers": "{\n    \"X-Auth\": \"Bearer your_token_here\",\n    \"Content-Type\": \"application/json\"\n}",
          "method": "GET",
          "defaults": ""
        },
        "ui": {
          "editable": false,
          "col": "1"
        }
      },
      "customField": "plugin::virtval.virtval"
    },
    "Reviewer": {
      "type": "customField",
      "options": {
        "fetch": {
          "url": "https://dummyjson.com/products",
          "map": "{\"Reviewer\": \"products.0.reviews.1.reviewerName\"}",
          "defaults": "",
          "body": "{}",
          "headers": "{}",
          "method": "GET"
        },
        "ui": {
          "col": 1
        }
      },
      "customField": "plugin::virtval.virtval"
    }
  }
}
